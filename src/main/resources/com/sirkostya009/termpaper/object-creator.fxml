<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.sirkostya009.termpaper.MicroObjectCreator"
      prefHeight="300.0" prefWidth="200.0"
      alignment="CENTER" spacing="15" fillWidth="false">

    <TextField fx:id="nameField" promptText="name"/>
    <TextField fx:id="scaleField" promptText="scale"/>
    <CheckBox  fx:id="isActive" text="Is active"/>
    <ChoiceBox fx:id="microObjectLevel"/>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Create" defaultButton="true" onAction="#create"/>
        <Button text="Cancel" cancelButton="true" onAction="#close"/>
    </HBox>

</VBox>
